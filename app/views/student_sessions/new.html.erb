<% title 'Login' %>

<% form_for @student_session, :url => student_session_path do |f| %>
  <% f.error_messages %>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>  

  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>

  <%= f.submit "Login" %>
<% end %>
