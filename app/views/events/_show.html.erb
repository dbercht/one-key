<% @student = current_student %>
<% title "#{@student.advisor.name}'s Appointments" %>  
<div id="small" id="loud">

<h1><%= @student.name %> </h1>
</div>
<h2>Current advisor: <%= @student.advisor.login %></h2>
<h2>Current advisor's e-mail: <%= @student.advisor.name %></h2>

<br />
<%= link_to 'Edit information or delete account', edit_student_path(@student) %>

<div id="create_event_hide">
  <% if !current_student.event %>
    <%=link_to_remote 'Create Event', :url => {:action => :new}, :before => "$('#loading').show()", :complete => "$('#loading').hide()", :success => "$('#create_event_hide').hide()" %>
  <% else %>
    <p> You have an appointment at <%= @student.event.starttime %> | 
    <%= link_to "Delete this event?", :controller => "events", :action => "destroy", :id => @student.event.id  %> </p>
  <% end %>
</div>
